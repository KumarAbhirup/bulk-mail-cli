{
  "name": "bulk-mail-cli",
  "version": "0.0.1",
  "description": "Send bulk non-spammy emails right from your terminal!",
  "main": "src/bulkmailer.js",
  "scripts": {
    "start": "npm run build && node ./src/dist/src/bulkmailer.js",
    "build": "rimraf src/dist/ && babel ./ --out-dir src/dist/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files",
    "test": "echo No tests written."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KumarAbhirup/bulk-mail-cli.git"
  },
  "dependencies": {
    "terminal-kit": "^1.26.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "rimraf": "^2.6.2"
  },
  "bin": {
    "bulkmail": "./src/dist/src/bin/global.js"
  },
  "preferGlobal": true,
  "keywords": [
    "mail",
    "bulk",
    "javascript",
    "nodemailer",
    "emailjs",
    "cli",
    "email",
    "node",
    "mailer"
  ],
  "author": "Kumar Abhirup",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/KumarAbhirup/bulk-mail-cli/issues"
  },
  "homepage": "https://github.com/KumarAbhirup/bulk-mail-cli#readme"
}
